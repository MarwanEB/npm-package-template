{
  "name": "npm-package-template",
  "version": "0.0.0",
  "description": "Typescript vanilla npm package template",
  "scripts": {
    "build": "tsup ./src",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "homepage": "https://github.com/MarwanEB/npm-package-template",
  "keywords": [
    "tsup",
    "npm",
    "template",
    "typescript"
  ],
  "author": {
    "name": "Marwan El Boussarghini",
    "url": "https://www.linkedin.com/in/marwan-el-boussarghini/"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "files": [
    "dist",
    "package.json"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts"
}
